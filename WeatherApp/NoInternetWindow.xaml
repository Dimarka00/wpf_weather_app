<Window x:Class="WeatherApp.NoInternetWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WeatherApp"
        mc:Ignorable="d" Height="685" Width="995" Background="Transparent"
        WindowStyle="None" AllowsTransparency="True" WindowStartupLocation="CenterOwner" FontFamily="Cambria">
    <Grid>
        <!-- Фон -->
        <Rectangle Fill="#80000000"/>

        <!-- Сообщение об отсутствии интернета -->
        <TextBlock FontSize="26" Text="Нет соединения с интернетом" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="White"/>

        <!-- Кнопка "Повторить" -->
        <Button Content="Повторить" Width="100" Height="30" HorizontalAlignment="Center"
                Click="RetryButtonClicked" Margin="0,430,0,220"/>
    </Grid>
</Window>
